<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <FontFamily x:Key="MainFont">../Fonts/#ALS Direct</FontFamily>
    <FontFamily x:Key="SPbFixed">../Fonts/SPb Fixed/#ALS SPb</FontFamily>
    <FontFamily x:Key="SPbofficial">../Fonts/#ALS SPb</FontFamily>
    <Style x:Key="SplashImage" TargetType="Image">
        <Style.Triggers>
            <EventTrigger RoutedEvent="MouseDown">
                
                    <BeginStoryboard>
                        <Storyboard Storyboard.TargetProperty="Opacity" >
                            <DoubleAnimation From="1"  To="0"
                                    Duration="0:0:1"/>
                        </Storyboard>
                    </BeginStoryboard>
               
            </EventTrigger>
            <Trigger Property="Opacity" Value="0">
                <Setter Property="Visibility" Value="Collapsed"></Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="ButtonFAQ" TargetType="Button">
        <Setter Property="Background" Value="#fbfbfb"/>
        <Setter Property="Foreground" Value="#000000"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" >
                        <TextBlock  VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20,20" Foreground="{TemplateBinding Foreground}" Text="{TemplateBinding Content}" FontSize="25" FontFamily="{StaticResource MainFont}" FontWeight="Bold"></TextBlock>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style BasedOn="{StaticResource ButtonFAQ }" x:Key="ButtonBack" TargetType="Button" >
        <Setter Property="Background" Value="#ecb244"/>
        <Setter Property="Foreground" Value="#ffffff"/>
    </Style>
    <Style x:Key="{x:Type Button}" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="{x:Type TextBlock}" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
    </Style>
    <Style x:Key="SPb" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#000000"/>
        <Setter Property="Background" Value="#ffffff"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="FontSize" Value="114"/>
        <Setter Property="Width" Value="845"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="{StaticResource SPbofficial}"/>
    </Style>
    <Style x:Key="SPbInfo" TargetType="TextBlock" BasedOn="{StaticResource SPb}">
        <Setter Property="Width" Value="950"/>
        <Setter Property="FontSize" Value="116"/>
        <Setter Property="Foreground" Value="#00adcb"/>
    </Style>
